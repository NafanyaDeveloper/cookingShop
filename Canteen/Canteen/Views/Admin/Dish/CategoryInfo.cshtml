@model List<Dish>

@{
    Layout = "~/Views/Admin/Layout.cshtml";//список блюд для админки
}

<h2 class="btn-block">@ViewBag.Category</h2>
<br />

@foreach (Dish i in Model)
{
<div class="card col-3 my-2 p-0 mx-1 mb-3" style="width:100%">
    <img class="card-img-top" src="@i.Img" alt="Card image" style="width:100%" height="150">
    <div class="card-body">
        <h4 class="card-title">@i.Title</h4>
        <p>Каллорийность: @i.Calorie (на 100 гр.)</p>
        <p>Белки: @i.Protein (%)</p>
        <p>Жиры: @i.Fat (%)</p>
        <p>Углеводы: @i.Carbohydrate (%)</p>
        <div>
            <a style="text-decoration: none" asp-action="DishInfo" asp-route-id="@i.Id" class="btn-block">
                <button class="btn btn-outline-success btn-block">Подробнее</button>
            </a>
            <a style="text-decoration: none" asp-action="EditDish" asp-route-id="@i.Id" class="btn-block">
                <button class="btn btn-outline-info btn-block">Изменить</button>
            </a>
            <a style="text-decoration: none" asp-action="DeleteDish" asp-route-id="@i.Id" class="btn-block">
                <button class="btn btn-outline-danger btn-block">Удалить</button>
            </a>
        </div>
    </div>
</div>
}
<a style="text-decoration: none" asp-action="CreateDish" class="mt-5 btn-block" asp-route-id="@ViewBag.CategoryId">
    <button class="btn btn-outline-warning btn-block">
        Добавить блюдо
    </button>
</a>
<a asp-action="CookShopInfo" style="text-decoration: none" class="btn-block mb-5" asp-route-id="@ViewBag.CookShopId">
    <button class="btn btn-outline-secondary btn-block">
        Вернуться
    </button>
</a>

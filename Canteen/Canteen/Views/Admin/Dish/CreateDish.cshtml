@model Dish

@{
    Layout = "~/Views/Admin/Layout.cshtml";//форма создания блюда для админки
}


<form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="CreateDish" class="col-12" 
      asp-route-CategoryId="@ViewBag.CategoryId">
    <div class="my-2 text-dark">
        <h5>Создать блюдо</h5>
    </div>
    <div class="form-group">
        <label>Название</label>
        <input class="form-control" name="Title" type="text" required />
    </div>
    <div class="form-group">
        <label>Калорийность</label>
        <input class="form-control" name="Calorie" type="number" required />
    </div>
    <div class="form-group">
        <label>Содержание белков</label>
        <input class="form-control" name="Protein" type="number" required />
    </div>
    <div class="form-group">
        <label>Содержание жиров</label>
        <input class="form-control" name="Fat" type="number" required />
    </div>
    <div class="form-group">
        <label>Содержание углеводов</label>
        <input class="form-control" name="Carbohydrate" type="number" required />
    </div>
    <div class="form-group">
        <label>Логотип</label>
        <input type="file" name="Image" required class="btn-block" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-outline-primary btn-block">
        Создать
    </button>
</form>
<a asp-action="CategoryInfo" asp-route-id="@ViewBag.CategoryId" class="btn-block col-12 mt-2" style="text-decoration: none">
    <button class="btn btn-outline-secondary btn-block">
        Вернуться
    </button>
</a>

@model Category

@{
    Layout = "~/Views/Admin/Layout.cshtml";//форма редактирования категории для админки
}


<form method="post" asp-action="EditCategory" class="col-12" asp-route-id="@Model.Id">
    <div class="my-2 text-dark">
        <h5>Редактировать категорию</h5>
    </div>
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" class="form-control" name="Title" type="text" required />
    </div>
    <div class="form-group">
        <input asp-for="CookShopId" class="form-control" name="CookShopId" required hidden />
    </div>
    <button type="submit" class="btn btn-outline-primary btn-block">
        Изменить
    </button>
</form>
<a asp-action="CookShopInfo" asp-route-id="@Model.CookShopId" class="btn-block col-12 mt-2" style="text-decoration: none">
    <button class="btn btn-outline-secondary btn-block">
        Вернуться
    </button>
</a>
